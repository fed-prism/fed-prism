{
  "name": "fed-prism-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "FedPrism monorepo â€” a developer tool for Module Federation 2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fed-prism/fed-prism.git"
  },
  "homepage": "https://github.com/fed-prism/fed-prism",
  "bugs": {
    "url": "https://github.com/fed-prism/fed-prism/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "turbo run build --filter=./packages/*",
    "build:examples": "turbo run build --filter=./examples/*",
    "dev": "turbo run dev --filter=./packages/*",
    "dev:examples": "turbo run dev --filter=./examples/*",
    "dev:all": "concurrently --names \"server,ui,app-c,app-b,app-a,shell\" --prefix-colors \"blue.bold,cyan.bold,green.bold,yellow.bold,red.bold,magenta.bold\" --kill-others \"node packages/cli/dist/index.js start --no-open\" \"pnpm --filter @fed-prism/ui dev\" \"pnpm --filter @fed-prism-examples/app-c dev\" \"pnpm --filter @fed-prism-examples/app-b dev\" \"pnpm --filter @fed-prism-examples/app-a dev\" \"pnpm --filter @fed-prism-examples/shell dev\"",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck --filter=./packages/*",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml,css}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml,css}\" --ignore-path .gitignore",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=./packages/* && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "concurrently": "^9.1.2",
    "prettier": "^3.5.2",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.6.1"
}
